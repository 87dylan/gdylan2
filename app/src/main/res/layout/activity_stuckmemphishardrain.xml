<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgblackish1"

    tools:context=".stuckmemphishardrain">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="367dp"
        android:layout_height="100dp"
        android:fontFamily="cursive"
        android:background="@drawable/costumheadcolor"

        android:gravity="center"
        android:text="@string/stuck_inside_of_memphis_blues_again_title"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView3"
        android:layout_width="406dp"
        android:layout_height="482dp"
        android:fillViewport="true"
        android:scrollbarThumbHorizontal="?android:attr/colorActivatedHighlight"
        android:scrollbarThumbVertical="?android:attr/textColorLinkInverse"
        android:scrollbarTrackVertical="@android:color/background_light"
        android:scrollbars="vertical"
        android:soundEffectsEnabled="true"
        android:splitMotionEvents="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="@font/andada"
            android:gravity="center"
            android:lineSpacingExtra="14sp"
            android:text="@string/stuckinmemphisbluelivelyrics"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FCFBFB"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>