<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgblackish1"

    tools:context=".allalongthewatchtower">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="381dp"

        android:layout_height="112dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/costumheadcolor"
        android:fontFamily="cursive"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/all_along_the_watchtower_title"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:fillViewport="true"

        android:scrollbarThumbHorizontal="?android:attr/colorActivatedHighlight"
        android:scrollbarThumbVertical="?android:attr/textColorLinkInverse"
        android:scrollbarTrackVertical="@android:color/background_light"
        android:scrollbars="vertical"
        android:soundEffectsEnabled="true"
        android:splitMotionEvents="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">


        <TextView

            android:text="@string/allalongthewatchtowerlyrics"
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="@font/andada"
            android:gravity="center"
            android:lineSpacingExtra="18sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold|italic"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>